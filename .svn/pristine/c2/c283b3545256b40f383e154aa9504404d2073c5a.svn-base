			}			
		}

		else
		{
			if(!initializedShop) {
				gameObject.GetComponent<TutorialShop>().selectedSpecies = null;
				gameObject.GetComponent<TutorialShopCartPanel>().ResetCartList();

				gameObject.GetComponent<TutorialShop>().InitializeAll();

				initializedShop = true;
			}
		}
	
